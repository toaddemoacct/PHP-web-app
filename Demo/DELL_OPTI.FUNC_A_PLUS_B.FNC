CREATE OR REPLACE FUNCTION DELL_OPTI.FUNC_A_PLUS_B (A IN NUMBER, B IN NUMBER)
   RETURN NUMBER
IS
   A1 NUMBER(7);
   B1 VARCHAR2(400);
BEGIN
   SELECT DPT_ID,
          DPT_NAME
     INTO A1,
          B1
     FROM EMPLOYEE,
          DEPARTMENT
    WHERE DPT_ID = EMP_DEPT
      AND EMP_SALARY - DPT_AVG_SALARY >= 20000;

   RETURN A + B + A1;
END;
/
