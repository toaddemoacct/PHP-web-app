CREATE OR REPLACE TRIGGER DELL_DEV.TRG_DELETE_EMP_DEPT
    BEFORE DELETE
    ON DELL_DEV.EMPLOYEE
    FOR    EACH ROW
DISABLE
BEGIN
    DELETE EMPLOYEE
     WHERE NOT EXISTS (SELECT 'X'
                         FROM EMPLOYEE,
                              DEPARTMENT
                        WHERE EMP_DEPT = DPT_ID) ;
END;
/
