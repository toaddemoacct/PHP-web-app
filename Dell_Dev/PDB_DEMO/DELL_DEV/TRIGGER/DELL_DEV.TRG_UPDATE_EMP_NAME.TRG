CREATE OR REPLACE TRIGGER DELL_DEV.TRG_UPDATE_EMP_NAME
    BEFORE UPDATE OF EMP_NAME
    ON DELL_DEV.EMPLOYEE
    REFERENCING OLD AS ERIC_OLD NEW AS ERIC_NEW
    FOR      EACH ROW
WHEN (
ERIC_OLD.EMP_NAME = 'ALEX'
      )
BEGIN
    SELECT 'X' || :ERIC_NEW.EMP_NAME || 'X'
    INTO   :ERIC_NEW.EMP_NAME
    FROM   EMPLOYEE
    WHERE  EMP_ID = :ERIC_OLD.EMP_ID;
END;
/
